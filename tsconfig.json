{
  "compilerOptions": {
    "target": "ESNext", // Target latest ECMAScript features
    "lib": ["ESNext"], // Include latest ECMAScript library features
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Enables compatibility with Babel/ES6 imports
    "skipLibCheck": true, // Skip type checking of declaration files
    "declaration": true, // Generate corresponding '.d.ts' file
    "outDir": "./dist", // Redirect output structure
    "types": ["node", "jest"], // Include types for node and jest
    "allowSyntheticDefaultImports": true // Allow default imports from modules with no default export
  },
  "include": ["src/**/*.ts"], // Files to be included
  "exclude": ["node_modules", "src/**/*.test.ts"] // Files to be excluded
}